{
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "background"
  ],
  "content_security_policy": "script-src https://facebook.com; object-src https://facebook.com"
}
